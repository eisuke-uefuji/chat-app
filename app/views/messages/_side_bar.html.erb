<%# サイドバー上  %>

<div class="side-top">
  <div class="user-name">
   <%= link_to current_user.name, edit_user_path(current_user) %>
  </div>
  <div class="create-chat">
   <a href="#">チャットを作成する</a>
  </div>
</div>

<%# サイドバー下 %>
<div class="side-bottom">
